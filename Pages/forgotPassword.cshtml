@page
@model Kitapyurdu_Clone.Pages.forgotPasswordModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="/css/forgotPassword.css" />
}
<div class="forgot-password-container">
    <h1>Şifremi Unuttum</h1>
    <p>Şifre yenileme bağlantısı, üye olurken kullandığınız e-posta adresinize gönderilecektir.</p>
    <form action="processForgotPassword.php" method="POST">
        <label for="email">E-Posta Adresiniz:</label>
        <input type="email" id="email" name="email" placeholder="E-posta adresinizi giriniz" required>
        <button type="submit" class="forgot-password-btn">Yenileme Bağlantısı Gönder</button>
    </form>
</div>
{
}
